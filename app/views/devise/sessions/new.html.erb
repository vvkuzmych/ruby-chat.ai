<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "session" }) do |f| %>
  <div>
    <h2>Login</h2>

    <div class="session__inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  placeholder: "Email",
                  label_html: { class: "visually-hidden" } %>
      <%= f.input :password,
                  required: false,
                  placeholder: "Password",
                  label_html: { class: "visually-hidden" } %>

      <%= f.button :submit, "Log in", class: "btn btn--primary" %>
    </div>

    <div class="session__shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
